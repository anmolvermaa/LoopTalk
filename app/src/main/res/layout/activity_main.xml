<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/back">


    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="268dp"
        android:layout_height="224dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/loop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/loop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="169dp"
        android:fontFamily="@font/adlam_display"
        android:text="@string/looptalk"
        android:textAlignment="center"
        android:textColor="#00A7F1"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/made"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_img" />

    <TextView
        android:id="@+id/made"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="58dp"
        android:fontFamily="@font/adlam_display"
        android:text="@string/made_with_love"
        android:textAlignment="center"
        android:textColor="#00A7F1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loop" />
</androidx.constraintlayout.widget.ConstraintLayout>